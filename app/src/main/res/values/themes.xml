<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FT_TestingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparente</item>
    </style>

    <style name="Theme.FT_TestingApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FT_TestingApp.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SuperTitle">
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="subTitle_Basic">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.FT_TestingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FT_TestingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FT_TestingApp" parent="Base.Theme.FT_TestingApp" />
</resources>